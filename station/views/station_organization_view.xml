<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="station_organization_action" model="ir.actions.act_window">
        <field name="name">Organization</field>
        <field name="res_model">station.organization</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="station_organization_view_tree" model="ir.ui.view">
        <field name="name">Organization.tree</field>
        <field name="model">station.organization</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name = "name"/>
            </tree>
        </field>        
    </record>

</odoo>